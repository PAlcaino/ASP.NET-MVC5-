@model GestionToxicologica.Models.Denuncia
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>DENUNCIA</h1>
    <p class="lead">Si has detectado algun indicio de infestacion toxica, puedes llenar este formulario para realizar la respectiva denuncia</p>
    <p> @Html.ActionLink("Ingresar Denuncia", "Denuncia")</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Consultar estado de mi denuncia</h2>
        <p>
            Si ya has ingresado tu denuncia y deseas consultar su estado o mas informacion
        </p>
        @using (Html.BeginForm("DenunciaEstado", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Id_denuncia, htmlAttributes: new { @class = "control-label col-md-2 col-md-10" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Id_denuncia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Id_denuncia, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CorreoUsuario, new { @class = "col-md-2 control-label" })
                <div class="col-md-10" id="datetimepicker">
                    @Html.EditorFor(model => model.CorreoUsuario, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>