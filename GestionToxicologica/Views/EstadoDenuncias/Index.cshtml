@model IEnumerable<GestionToxicologica.Models.EstadoDenuncia>

@{
    ViewBag.Title = "Index";
}

<h2>Estados Denuncias</h2>

<p>
    @Html.ActionLink("Agregar nuevo estado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Estado }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Estado }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Estado })
        </td>
    </tr>
}

</table>
